<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
      <% if params[:plan] == '2' %>
        <h3>Pro Account</h3> 
        <p>Sign Up for pro account for $10/month and get access to community & contact information!</p>
    <% else %>
       <h3>Basic Account</h3>
        <p>Sign Up for free and get basic access to the community.</p>
    <% end %>
  </div>
      <div class="col-md-4 col-md-offset-4 well">
          <h2>Sign up</h2>
            <% if params[:plan] == '2' %>
              <%=render "pro_form.html" %>
           <% else %> 
              <%=render "basic_form.html" %>
          <% end %>
              <%= render "devise/shared/links" %>
        </div>
</div>