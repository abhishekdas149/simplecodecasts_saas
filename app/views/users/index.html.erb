<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="text-center">Dev Match Community</h1>
    <p>Welcome to Dev Match Community. User must fil out a profile in order to be visible in the Community</p>
    <ul class="list-unstyled">
      <% @users.each do |user|  %>  
        <% if user.profile %>
            <li>
              <div class="well row <%= cycle('white','') %>">
                <div class="col-sm-4">
                 <% if user.profile.avatar %> 
                  <%= link_to user do %>
                    <%= image_tag user.profile.avatar.url(:thumb), class: 'user-index-avatar' %><br>
                  <% end %>
                 <% end %> 
                </div>
                <div>
                  <%= link_to user do %>
                    <h3><%= user.profile.first_name %> <%= user.profile.last_name %></h3>  
                  <% end %>
                  <p>
                    <%= user.profile.job_title %><%= " " %>
                    <% if user.plan_id == 2 %>
                    <span class="label label-danger"> Pro</span>
                    <% end %>
                  </p>
                  
               
                </div>
              </div>   
            </li>   
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
  
